{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "deaf-mute-assistant-desktop",
  "version": "0.1.0",
  "identifier": "com.fermeridamagni.deaf-mute-assistant-desktop",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Deaf Mute Assistant",
        "fullscreen": true,
        "minimizable": false,
        "resizable": false,
        "alwaysOnTop": true,
        "closable": false,
        "skipTaskbar": true,
        "browserExtensionsEnabled": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
